{
    "version": 7,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 27,
        "patch": 0
    },
    "configurePresets": [
        {
            "hidden": true,
            "name": "ninja-debug",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "installDir": "${sourceDir}/build/out",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/install",
                "CMAKE_EXPORT_COMPILE_COMMANDS": true,
                "CMAKE_VERBOSE_MAKEFILE": false
            }
        },
        {
            "hidden": true,
            "name": "ninja-release",
            "inherits": "ninja-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "nrf52840",
            "displayName": "GCC NRF52840",
            "inherits": "ninja-debug",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/build/out/${presetName}",
            "cacheVariables": {
                "TOOLCHAIN_OPTIMIZATION_FLAG": "-Og",
                "SANDBOX_TARGET": "STM32",
                "SANDBOX_CHIP": "STM32G473xx"
            },
            "toolchainFile": "${sourceDir}/cmake/toolchains/gcc/gcc_arm_m4f_toolchain.cmake"
        }
    ]
}
